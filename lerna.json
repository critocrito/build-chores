{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "version": "0.7.0",
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "bump": "minor",
      "exact": true,
      "forcePublish": "*",
      "conventionalCommits": true,
      "push": false,
      "sign-git-tag": true
    }
  }
}
