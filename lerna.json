{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "0.1.0",
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "bump": "minor",
      "skipNpm": true,
      "exact": true,
      "forcePublish": "*",
      "conventionalCommits": true
    }
  }
}
